%h1 Sea Animal Categories

%table
  %tr
    %th Category

  - @categories.each do |category|
    %tr
      %td= category.name
      %td= link_to 'Show', category_path(category)
      %td= link_to 'Edit', edit_category_path(category)
      %td= link_to 'Delete', category_path(category), method: :delete, data: { confirm: 'Are you sure?'}


= link_to 'New Category', new_category_path
